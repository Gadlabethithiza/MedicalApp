<table id="myTable1" border="0" class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">@Html.ActionLink("Category Name", "Index", new { sortOrder = ViewBag.NameSortParm })</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <th scope="row">@r.Id</th>
                <td>@r.Name</td>
                <td>@r.Description</td>
                <td valign="top" style="width:100px;">
                    <a asp-action="ViewCategory" asp-route-Id="@r.Id">
                        <i class="fa fa-folder-open-o" style="color: blue; font-size: 24px"></i>
                    </a>

                    <a asp-action="UpdateCategory" asp-route-id="@r.Id">
                        <i class="fa fa-pencil-square-o" style="color: grey; font-size: 24px"></i>
                    </a>

                    <a asp-action="DeleteCategory" asp-route-Id="@r.Id">
                        <i class="fa fa-trash-o" style="color: red; font-size: 24px"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>