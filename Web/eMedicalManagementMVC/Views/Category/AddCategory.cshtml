@model eMedicalManagementMinimalAPI.Core.Entities.CategoryItem
@{
    ViewBag.Title = "Add a Category Item";
}

<h2>Add a Category <a asp-action="Index" class="btn btn-sm btn-secondary">Back to List</a></h2>
<form asp-action="AddCategory" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input class="form-control" name="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Save Info</button>
    </div>
</form>

