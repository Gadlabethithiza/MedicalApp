@using eMedicalManagementMinimalAPI.Core.Entities
@model IEnumerable<ProvinceItem>
<table class="table table-bordered" id="customerTable">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Created Date
            </th>
            <th>
                Modified Date
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var province in Model)
            {
                <tr>
                    <td>
                        @province.ProvinceId
                    </td>
                    <td>
                        @province.ProvinceName
                    </td>
                    <td>
                        @province.created_date.ToString("yyyy-MM-dd HH:mm:ss")
                    </td>
                    <td>
                        @province.modified_date.ToString("yyyy-MM-dd HH:mm:ss")
                    </td>
                    <td text-right">
                        <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@province.ProvinceId','Edit Province')" class="btn btn-info text-white"> Edit</a>
                        <form method="post" asp-page="Index" asp-route-id="@province.ProvinceId" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                            <button type="submit" class="btn btn-danger text-white"> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>$(document).ready(function () {
        $("#customerTable").DataTable();
    });</script>