@using eMedicalManagementMinimalAPI.Core.Entities
@model ProvinceItem

<form id="create-form" method="post" asp-page="Index" asp-route-id="@Model.ProvinceId" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Province Name</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="ProvinceName" name="ProvinceName" class="form-control">
            <span asp-validation-for="ProvinceName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="visibility:hidden;">
        <label class="col-md-3 col-form-label">Created By</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="created_by" name="created_by" class="form-control" />
            <span asp-validation-for="created_by" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="visibility:hidden;">
        <label class="col-md-3 col-form-label">Created Date</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="created_date" name="created_date" class="form-control" />
            <span asp-validation-for="created_date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="visibility:hidden;">
        <label class="col-md-3 col-form-label">Modified By</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="modified_by" name="modified_by" class="form-control" />
            <span asp-validation-for="modified_by" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="visibility:hidden;">
        <label class="col-md-3 col-form-label">Modified Date</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="modified_date" name="modified_date" class="form-control" />
            <span asp-validation-for="modified_date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="visibility:hidden;">
        <label class="col-md-3 col-form-label">Guid</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="guid" name="guid" class="form-control" />
            <span asp-validation-for="guid" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary save-button">Save</button>
    </div>

</form>
<script type="text/javascript" language=javascript>$.validator.unobtrusive.parse(document);</script>



